    <changeSet id="1" author="user">
        <createTable tableName="request">
            <column name="id" type="long" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="customer_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_address" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="sum" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="request_details">
            <column name="id" type="long" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="product_id" type="long">
                <constraints nullable="false"/>
            </column>
            <column name="request_id" type="long">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="product_description">
            <column name="id" type="long" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <addForeignKeyConstraint baseTableName="request_details" baseColumnNames="product_id"
                                 referencedTableName="product_description" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="request_details" baseColumnNames="request_id"
                                 referencedTableName="request" referencedColumnNames="id"/>

    </changeSet>
